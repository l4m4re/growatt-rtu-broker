# Example environment for docker-compose
# Copy to .env and adjust for your system

# Required: full by-path to inverter RS-485 adapter
INV_DEV=/dev/serial/by-id/usb-1a86_USB_Serial-if00-port0

# Required: full by-path to ShineWiFi-X USB adapter
SHINE_DEV=/dev/serial/by-id/usb-04e2_1410-if00-port0

# Optional overrides
BAUD=15200
BYTES=8N1
# Per-side overrides (uncomment to use)
# INV_BAUD=9600
# INV_BYTES=8E1
# SHINE_BAUD=9600
# SHINE_BYTES=8E1

TCP_BIND=0.0.0.0:5020
TCP_ALT_BIND=0.0.0.0:5021
SNIFF_BIND=0.0.0.0:5700
MIN_PERIOD=1.0
RTIMEOUT=1.5
LOG_PATH=-

