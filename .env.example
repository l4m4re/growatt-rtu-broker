# Example environment for docker-compose
# Copy to .env and adjust for your system

# Required: full by-path to inverter RS-485 adapter
INV_DEV=/dev/serial/by-path/pci-0000:00:14.0-usb-0:2.4.1:1.0-port0

# Required: full by-path to ShineWiFi-X USB adapter
SHINE_DEV=/dev/serial/by-path/pci-0000:00:14.0-usb-0:2.4.2:1.0-port0

# Optional overrides
BAUD=9600
BYTES=8E1
# Per-side overrides (uncomment to use)
# INV_BAUD=9600
# INV_BYTES=8E1
# SHINE_BAUD=9600
# SHINE_BYTES=8E1
TCP_BIND=0.0.0.0:5020
MIN_PERIOD=1.0
RTIMEOUT=1.5
LOG_PATH=/var/log/growatt_broker.jsonl
